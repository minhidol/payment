                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                  <thead>
                    <tr>
                      <th>Nhóm quyền</th>
                      {{!-- <th>Tính năng được sử dụng</th> --}}
                      <th>Ngày cập nhật</th>
                    </tr>
                  </thead>
                  <tbody id="table-user">
                    {{#each listPermission}}
                      <tr>
                        <td>{{this.name}}</td>
                        {{!-- <td>{{this.action}}</td> --}}
                        <td>{{dateFormat this.create_date "DD/MM/yyyy"}}</td>
                      </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
