    <section class="content" >
      <div class="container-fluid">
        <div class="modal fade" id="modal-default-permission">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header" style="background-color: rgb(255, 193, 7);">
              <h4 class="modal-title" style="color:#fff;">Danh sách quyền</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
             <form id="FormPermission">
              <div class="modal-body">
                <div class="card-body">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Nhóm quyền</label>
                    <input type="text" class="form-control" id="InputPermissionGroup" placeholder="Nhóm quyền">
                    <p style="color: red"><small ></small></p>
                  </div>
                  <div class="form-group">
                    <label style="width: 100%;">Các tính năng được sử dụng</label>
                    <select  id="js-example-basic-multiple" name="states[]" multiple="multiple" style="display: block;width: 100%">
                    </select>
                    <p style="color: red" id="ErrorCreateUser"></p>
                </div>
                </div>
              </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-success">Cập nhật</button>
                </div>
                </form>                
          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
      </div>
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title" style="font-weight: bold">Danh sách quyền</h3>
                
                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                  <button type="button"  class="btn btn-block btn-success" data-toggle="modal" data-target="#modal-default" disabled>
                  Thêm mới
                </button>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                  <thead>
                    <tr>
                      <th>Nhóm quyền</th>
                      {{!-- <th>Tính năng được sử dụng</th> --}}
                      <th>Ngày cập nhật</th>
                    </tr>
                  </thead>
                  <tbody id="table-permission">
                    {{#each listPermission}}
                      <tr>
                        <td>{{this.name}}</td>
                        {{!-- <td>{{this.action}}</td> --}}
                        <td>{{dateFormat this.create_date "DD/MM/yyyy"}}</td>
                        <td>
                          <a class="btn btn-info btn-sm" data-toggle="modal" data-target="#modal-default-permission">
                              <i class="fas fa-pencil-alt">
                              </i>
                              Chỉnh sửa
                          </a>
                        </td>
                        
                      </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
