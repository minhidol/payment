    <!-- Main content -->
    <section class="content" >
      <div class="container-fluid">
        <div class="modal fade" id="modal-default">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header" style="background-color: #007bff">
              <h4 class="modal-title" style="color:#fff">Thông tin user</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
             <form id="LogCreateUser">
              <div class="modal-body">
                <div class="card-body">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Họ và tên</label>
                    <input type="text" class="form-control" id="InputNameCreateUser" placeholder="Nhập họ và tên">
                    <p style="color: red"><small ></small></p>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Tên đăng nhập</label>
                    <input type="text" class="form-control" id="InputUsernameCreateUser" placeholder="Nhập tên đăng nhập">
                    <p style="color: red"><small ></small></p>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Mật khẩu</label>
                    <input type="password" class="form-control" id="InputPasswordCreateUser" placeholder="Nhập mật khẩu">
                    <p style="color: red"><small ></small></p>
                  </div>
                  <div class="form-group">
                    <label>Nhóm quyền</label>
                    <select id="ChoosePermission" class="form-control select2 select2-danger" data-dropdown-css-class="select2-danger" style="width: 100%;">
                      {{#each listPermission}}
                        <option value="{{this.type}}">{{this.name}}</option>
                      {{/each}}
                    </select>
                    <p style="color: red" id="ErrorCreateUser"></p>
                </div>
                </div>
              </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-success btn-sm">Tạo mới</button>
                </div>
                </form>     
          </div>
        </div>
      </div>

      <div class="modal fade" id="modal-default-update-user">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header" style="background-color: #007bff">
              <h4 class="modal-title" style="color:#fff">Thông tin user</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
             <form id="LogUpdateUser">
              <div class="modal-body">
                <div class="card-body">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Họ và tên</label>
                    <input type="text" class="form-control" id="InputNameUpdateUser" placeholder="Nhập họ và tên">
                    <p style="color: red"><small ></small></p>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Tên đăng nhập</label>
                    <input type="text" class="form-control" id="InputUsernameUpdateUser" placeholder="Nhập tên đăng nhập" disabled>
                    <p style="color: red"><small ></small></p>
                  </div>
                  <div class="form-group">
                    <label>Nhóm quyền</label>
                    <select id="UpdateChoosePermission" class="form-control select2 select2-danger" data-dropdown-css-class="select2-danger" style="width: 100%;">
                      {{#each listPermission}}
                        <option value="{{this.type}}">{{this.name}}</option>
                      {{/each}}
                    </select>
                    <p style="color: red" id="ErrorCreateUser"></p>
                </div>
                </div>
              </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-info btn-sm">
                              <i class="fas fa-pencil-alt">
                              </i>
                              Cập nhật
                          </button>
                </div>
                </form>     
          </div>
        </div>
      </div>
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title" style="font-weight: bold">Danh sách nhân viên</h3>
                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                  <button type="button"  class="btn btn-block btn-success" data-toggle="modal" data-target="#modal-default">
                  Thêm mới
                </button>
                  </div>
                </div>
              </div>
              <div class="card-body table-responsive p-0" style="height: 500px">
                <table class="table table-head-fixed text-nowrap" id="TableUser">
                  <thead>
                    <tr>
                      <th>Họ và tên</th>
                      <th>Tên đăng nhập</th>
                      <th>Quyền</th>
                      <th>Ngày tạo</th>
                    </tr>
                  </thead>
                  <tbody id="table-user">
                    {{#each listUser}}
                      <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.username}}</td>
                        <td><span class="tag tag-success">{{this.roleDetail}}</span></td>
                        <td>{{dateFormat this.create_date "DD/MM/yyyy"}}</td>
                        <td> 

                          <a class="btn btn-info btn-sm" data-toggle="modal" data-target="#modal-default-update-user">
                              <i class="fas fa-pencil-alt">
                              </i>
                              Chỉnh sửa
                          </a>
                    </td>
                      </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
